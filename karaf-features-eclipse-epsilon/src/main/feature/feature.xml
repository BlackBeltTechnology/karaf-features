<features name="eclipse-epsilon-${project.version}"
    xmlns="http://karaf.apache.org/xmlns/features/v1.5.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.5.0 http://karaf.apache.org/xmlns/features/v1.5.0">

    <feature name="eclipse-epsilon" version="2.4.0" description="Eclipse Epsilon" install="false">
        <feature>eclipse-epsilon-2</feature>
    </feature>

    <feature name="eclipse-epsilon-1" version="1.5.1" description="Eclipse Epsilon" install="false">
        <feature dependency="true">apache-commons-collections</feature>
        <feature dependency="true">apache-commons-csv</feature>
        <feature dependency="true">apache-commons-lang3</feature>
        <feature dependency="true">apache-poi3</feature>
        <feature dependency="true">stringtemplate3</feature>
        <feature dependency="true">google-gdata</feature>
        <feature dependency="true">eclipse-emf</feature>
        <bundle>mvn:hu.blackbelt.bundles.eclipse-epsilon/org.eclipse.epsilon/1.5.1_2</bundle>
    </feature>

    <feature name="eclipse-epsilon-2" version="2.4.0" description="Eclipse Epsilon" install="false">
        <feature dependency="true">guava-27</feature>
        <feature dependency="true">antlr3</feature>
        <feature dependency="true">apache-commons-collections</feature>
        <feature dependency="true">apache-commons-csv</feature>
        <feature dependency="true">apache-commons-lang3</feature>
        <feature dependency="true">apache-commons-math3</feature>
        <feature dependency="true">apache-poi4</feature>
        <feature dependency="true">stringtemplate3</feature>
        <feature dependency="true">eclipse-emf</feature>
        <feature dependency="true">jackson-jaxrs</feature>
        <bundle>mvn:hu.blackbelt.bundles.eclipse-epsilon/org.eclipse.epsilon/2.4.0_1</bundle>
    </feature>

</features>
